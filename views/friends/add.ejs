<%- include('../partials/header', {user: user}) %> 
<main> 
    <%- include('../partials/sidebar', {chatList: chatList}) %> 
    <section>
       <%- include('navigation') %>
        <h1>Add friend</h1>
        <form action="/friends/sendFriendRequest" method="POST">
            <p>You can add friends with their ChatApp usernames.</p>
            <div class="form-group">
            <input type="text" placeholder="Username" name="requesteeUsername"/>
            <button type="submit" class="btn-default btn-color box-shadow">
                + Add Friend
            </button>
            <p><%= success %></p>
            <p><%= warning %></p>
            <p><%= error %></p>
        </div>
        </form>
    </section>
</main>
<%- include('../partials/footer') %> 